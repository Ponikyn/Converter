<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Converter.MenuPage"
             Title="Menu"
             BackgroundColor="#FFFFFF">

    <NavigationPage.TitleView>
        <Grid>
            <Label Text="Menu" HorizontalOptions="Center" VerticalOptions="Center" FontSize="18"/>
        </Grid>
    </NavigationPage.TitleView>

    <StackLayout Padding="20" Spacing="20">
        <Button Text="Back" Clicked="OnBackClicked" HorizontalOptions="Start" />
        <Label Text="This is the menu page." HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>