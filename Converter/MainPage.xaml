<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Converter.Controls"
             x:Class="Converter.MainPage"
             BackgroundColor="#ECEFF1">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="controls:SquareButton">
                <Setter Property="BackgroundColor" Value="#CFD8DC" />
                <Setter Property="TextColor" Value="#263238" />
                <Setter Property="BorderColor" Value="#B0BEC5" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20" RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row 0 -->
        <controls:SquareButton Text="Расстояние" Grid.Row="0" Grid.Column="0" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="Масса" Grid.Row="0" Grid.Column="1" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="Температура" Grid.Row="0" Grid.Column="2" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

        <!-- Row 1 -->
        <controls:SquareButton Text="4" Grid.Row="1" Grid.Column="0" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="5" Grid.Row="1" Grid.Column="1" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="6" Grid.Row="1" Grid.Column="2" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

        <!-- Row 2 -->
        <controls:SquareButton Text="7" Grid.Row="2" Grid.Column="0" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="8" Grid.Row="2" Grid.Column="1" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="9" Grid.Row="2" Grid.Column="2" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

        <!-- Row 3 -->
        <controls:SquareButton Text="10" Grid.Row="3" Grid.Column="0" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="11" Grid.Row="3" Grid.Column="1" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <controls:SquareButton Text="12" Grid.Row="3" Grid.Column="2" Clicked="OnSquareButtonClicked" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

    </Grid>

</ContentPage>
