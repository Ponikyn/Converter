<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Converter.MainPage"
             Title="Unit Converter">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20">

            <Label Text="Выберите величину для конвертации"
                   FontSize="20"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="CategoriesView"
                            SelectionMode="Single"
                            SelectionChanged="CategoriesView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               Padding="12"
                               CornerRadius="8"
                               HasShadow="True">
                            <Label Text="{Binding Name}"
                                   FontSize="18" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
